	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:task="http://www.springframework.org/schema/task" xmlns:cache="http://www.springframework.org/schema/cache"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.2.xsd
      http://www.springframework.org/schema/task
      http://www.springframework.org/schema/context/spring-task-3.2.xsd
      http://www.springframework.org/schema/cache
      http://www.springframework.org/schema/cache/spring-cache-3.2.xsd
">
	<!-- 加载数据库配置文件
	<context:property-placeholder location="classpath:properties/jdbc.properties"
		ignore-unresolvable="true" />

	<context:annotation-config />-->

	<bean id="propertyConfigurer"
		  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			 <bean id="remoteProperties" class="com.dozenx.web.core.properties.RemoteProperties"
			  	p:url="jdbc:mysql://192.168.10.183:3306/awifiopms?Unicode=true&characterEncoding=utf8"
			   p:driver="com.mysql.jdbc.Driver"
			   p:password="awifi2B@#$"
			   p:user="awifi2Badmin"
			 />
		</property>
		<!--<property name="locations">
			<list>
				<value>classpath:properties/config.properties</value>
				<value>classpath:properties/jdbc.properties</value>

			</list>
		</property>-->
	</bean>

	<!-- 配置注解扫描 -->



<!--	<context:component-scan base-package="core.log">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>-->
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />

	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

	<!-- 缓存配置  -->
	<cache:annotation-driven cache-manager="cacheManager"/> 
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager" p:cache-manager-ref="ehcache"/> 
	<bean id="ehcache" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" p:config-location="classpath:ehcache.xml"/>
	<!-- 配置服务注册组件 -->
	<bean id="serviceRegistry" class="com.xxx.rpc.registry.ServiceRegistry">
		<constructor-arg name="registryAddress" value="${registry.address}"/>
	</bean>
</beans>